# Ghostty configuration
# Docs: https://ghostty.org/docs/config

# --- 見た目・フォント ---
font-style = Regular
font-style-bold = Bold
font-style-italic = Italic
font-style-bold-italic = Bold Italic
font-size = 14

# 行間を少し広げてモダンにする
adjust-cell-height = 10%

# フォントファミリー
font-family = Moralerspace Neon
font-family-bold = Moralerspace Neon
font-family-italic = Moralerspace Neon
font-family-bold-italic = Moralerspace Neon

# ========================================
# テーマ設定
# ========================================
theme = Dracula

# ========================================
# ウィンドウ
# ========================================
background-opacity = 0.90
background-blur-radius = 20

# ウィンドウ内の余白
window-padding-x = 12
window-padding-y = 12
window-padding-balance = true

# ウィンドウ状態の復元は無効化（起動不能ループ回避）
window-save-state = never

# 非アクティブペインを暗く
unfocused-split-opacity = 0.7

# カーソル
cursor-opacity = 0.8
cursor-color = ffffff

# ========================================
# MacOS
# ========================================
# タイトルバーを透明にしてスッキリさせる
macos-titlebar-style = transparent

# フルスクリーン時にMac標準の挙動にする
macos-window-shadow = true

# 左optionをaltキーに
macos-option-as-alt = left

# ========================================
# 操作性
# ========================================
# 選択しただけでクリップボードにコピー
copy-on-select = true

# クリップボードの読み書きを許可
clipboard-read = allow
clipboard-write = allow

# マウス関連
# 入力中はマウスカーソルを隠す
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# ========================================
# パフォーマンス
# ========================================
# スクロールバック行数（大量出力に対応）
scrollback-limit = 10000

# ========================================
# シェル統合
# ========================================

# シェル統合を有効化
shell-integration = detect
shell-integration-features = cursor,sudo,title
command = /opt/homebrew/bin/fish

# ========================================
# キーバインド
# ========================================

# 設定ファイルを Vim で開く（Cmd+,）
# open_config は macOS の既定アプリで開くため、text アクションで Vim を直接実行する
keybind = cmd+comma=text:vim ~/.config/ghostty/config\x0d

# 設定リロード
keybind = cmd+alt+comma=reload_config

#  Cmd+Enter で「下に」分割
keybind = cmd+enter=new_split:down

# Cmd+Shift+Enter で「右に」分割
keybind = cmd+shift+enter=new_split:right

# スプリット間移動
keybind = cmd+left=goto_split:left
keybind = cmd+right=goto_split:right
keybind = cmd+up=goto_split:top
keybind = cmd+down=goto_split:bottom

# スプリット間移動（Vim風）
# keybind = ctrl+cmd+h=goto_split:left
# keybind = ctrl+cmd+j=goto_split:bottom
# keybind = ctrl+cmd+k=goto_split:top
# keybind = ctrl+cmd+l=goto_split:right

# スプリットリサイズ
keybind = cmd+shift+left=resize_split:left,20
keybind = cmd+shift+right=resize_split:right,20
keybind = cmd+shift+up=resize_split:up,20
keybind = cmd+shift+down=resize_split:down,20

# Cmd + W で現在の「ペイン（分割）」を閉じる
keybind = cmd+w=close_surface

# プロンプト間ジャンプ（Claude Codeの出力を素早く確認）
keybind = cmd+alt+up=jump_to_prompt:-1
keybind = cmd+alt+down=jump_to_prompt:1
